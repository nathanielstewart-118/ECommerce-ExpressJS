# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
NODE_ENV=development
PORT=3000
API_VERSION=v1

# ===========================================
# DATABASE - MongoDB
# ===========================================
MONGODB_URI=mongodb://localhost:27017/express_production_db
MONGODB_URI_TEST=mongodb://localhost:27017/express_production_db_test

# ===========================================
# REDIS (for caching and rate limiting)
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===========================================
# JWT AUTHENTICATION
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_EXPIRATION_MINUTES=30
JWT_REFRESH_EXPIRATION_DAYS=30
JWT_RESET_PASSWORD_EXPIRATION_MINUTES=10
JWT_VERIFY_EMAIL_EXPIRATION_MINUTES=60

# ===========================================
# COOKIE SETTINGS
# ===========================================
COOKIE_SECRET=your-cookie-secret-change-in-production

# ===========================================
# EMAIL - SMTP (NodeMailer)
# ===========================================
SMTP_HOST=smtp.ethereal.email
SMTP_PORT=587
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password
EMAIL_FROM=noreply@yourapp.com
EMAIL_FROM_NAME=YourApp

# ===========================================
# 3RD PARTY API - STRIPE (Payments)
# ===========================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key

# ===========================================
# 3RD PARTY API - OPENAI (AI Features)
# ===========================================
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4

# ===========================================
# 3RD PARTY API - TWILIO (SMS)
# ===========================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ===========================================
# 3RD PARTY API - AWS S3 (File Storage)
# ===========================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# ===========================================
# 3RD PARTY API - GOOGLE (OAuth)
# ===========================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=debug
LOG_FORMAT=combined

# ===========================================
# CORS
# ===========================================
CORS_ORIGIN=http://localhost:3001
CORS_CREDENTIALS=true

# ===========================================
# FILE UPLOAD
# ===========================================
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# ===========================================
# CRON JOB SETTINGS
# ===========================================
CRON_ENABLED=true
CRON_CLEANUP_SCHEDULE=0 0 * * *
CRON_REPORT_SCHEDULE=0 9 * * 1
CRON_SYNC_SCHEDULE=*/15 * * * *
